{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",
    "build": "vite build",
    "electron:dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.izaroth.transcriptorlocal",
    "productName": "TranscriptorLocal",
    "files": ["dist/**", "electron/**"],
    "extraResources": [
      { "from": "resources/windows/ffmpeg", "to": "ffmpeg" },
      { "from": "resources/windows/backend", "to": "backend" }
    ],
    "win": {
      "target": ["nsis"]
    }
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.2.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.2.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
